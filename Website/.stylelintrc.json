{
  "extends": "stylelint-config-sass-guidelines",
  "rules": {
    "string-quotes": "double",
    "selector-class-pattern": "^([a-z]|[A-Z])(-|_|[a-zA-Z0-9])+$",
    "scss/dollar-variable-pattern": "^([a-z]|[A-Z])(-|_|[a-zA-Z0-9])+$",
    "indentation": null,
    "order/properties-alphabetical-order": null,
    "color-named": null
  },
  "ignoreFiles": [
    "node_modules/**/*.css",
    "app/**/*.css",
    "bootstrap/**/*.css",
    "config/**/*.css",
    "database/**/*.css",
    "public/**/*.css",
    "routes/**/*.css",
    "storage/**/*.css",
    "tests/**/*.css",
    "vendor/**/*.css"
  ]
}
